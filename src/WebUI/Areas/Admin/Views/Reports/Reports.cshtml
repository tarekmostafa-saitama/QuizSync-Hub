@using System.Net
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CleanArchitecture.Application.ViewModels.GameReportsVm
@{
    ViewData["Title"] = "Reports";
}
<h2>title</h2>
@section Styles
{
    <!--datatable css-->
    <link rel="stylesheet" href="~/vezlon/assets/1.11.5/css/dataTables.bootstrap5.min.css">
    <!--datatable responsive css-->
    <link rel="stylesheet" href="~/vezlon/assets/responsive/2.2.9/css/responsive.bootstrap.min.css">

    <link rel="stylesheet" href="~/vezlon/assets/buttons/2.2.2/css/buttons.dataTables.min.css">
    <link rel="stylesheet" href="https://uicdn.toast.com/chart/latest/toastui-chart.min.css" />
    <script src="https://uicdn.toast.com/chart/latest/toastui-chart.min.js"></script>
}

<div class="page-content">
    <div class="container-fluid">

<!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0"> Games</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Games</a></li>
                            <li class="breadcrumb-item active">Game Rounds Reports</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <div>
            <div class="row ">
                <div class=" col-md-4">
                    <a class="btn btn-info m-3" asp-action="List" asp-controller="Games" >Back to Games </a>
                </div>
            </div>
        </div>

        @if (Model.GameSubmissionVms.Any())
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Game Rounds Reports</h5>
                        </div>
                        <div class="card-body">
                            <table id="example" class="table table-bordered table-responsive nowrap table-striped align-middle" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Date </th>

                                        <th>Participants Number</th>

                                        <th>Operations</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var round in Model.GameRoundDataVm)
                                    {
                                        <tr id="round_@round.RoundIdentifier">
                                            <td> @round.DateTime </td>
                                            <td> @round.ParticipantsNumber </td>
                                            <td>
                                                <span><a asp-controller="Reports" asp-action="RoundDetails" asp-route-gameId="@round.GameId" asp-route-identifier="@round.GameSubmissionVms.First().SubmissionIdentifier" type="button" class="btn btn-sm btn-soft-primary me-2">Details</a></span>
                                                <span>

                                                    <a onclick="DeleteConfirmation('@Url.Action("DeleteRound", "Reports", new{ identifier=round.RoundIdentifier})',true,
                                                                                    'GET',
                                                                                    'round_@round.RoundIdentifier',
                                                                                    'Delete Round !'
                                                                                    ,'Are you sure you want to delete this round?')" class="btn btn-sm btn-soft-danger me-2">Delete</a>
                                                </span>

                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row ">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-12 layout-spacing">
                            @{
                                var questions = Model.GameRoundDataVm.Select(x => x.QuestionVms).FirstOrDefault();
                                var id = Convert.ToInt32(Model.GameRoundDataVm.Select(x => x.GameId).FirstOrDefault());
                            }
                            @if (questions != null)
                            {
                                @foreach (var ques in questions)
                                {

                                    @(await Component.InvokeAsync("RoundsQuestionsSubmits",
                                        new
                                        {
                                            Id = id,
                                            Question = ques,
                                        }))


                                }
                            }

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Player In All Rounds </h5>
                        </div>
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-responsive nowrap table-striped align-middle" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Player Name </th>

                                        <th>Score</th>
                                        <th>Date</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var round in Model.GameSubmissionVms.OrderBy(x => x.TotalScore))
                                    {
                                        <tr>
                                            <td> @round.Name </td>
                                            <td> @round.TotalScore </td>
                                            <td> @round.DateTime </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
            <div class="col-lg-12">
                <div class="card">
                        <div class="col-md-8 text-center mt-3 m-auto">
                            <div class="alert alert-warning alert-border-left alert-dismissible fade show text-center" role="alert">
                                <i class="ri-alert-line me-3 align-middle"></i> <strong>No Rounds Played Yet </strong>
                            </div>
                        </div>
                  </div>
            </div>
            </div>

        }


    </div>
</div>



