@model IEnumerable<CleanArchitecture.Domain.Entities.ApplicationUser>
@{
    ViewData["Title"] = "Moderators";
}
@section Styles
    {
    <!--datatable css-->
    <link rel="stylesheet" href="~/vezlon/assets/1.11.5/css/dataTables.bootstrap5.min.css">
    <!--datatable responsive css-->
    <link rel="stylesheet" href="~/vezlon/assets/responsive/2.2.9/css/responsive.bootstrap.min.css">

    <link rel="stylesheet" href="~/vezlon/assets/buttons/2.2.2/css/buttons.dataTables.min.css">
}
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Moderator List</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Moderators</a></li>
                            <li class="breadcrumb-item active">List</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"> Moderators List</h5>

                    </div>
                    <div>
                        <div>
                            <div class="row ">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end ">
                                    <a class="btn btn-info m-4" onclick="OpenPopupContent('@Url.Action("Create", "Moderators")','Add Moderator')">Add Moderator </a>

                                </div>
                            </div>
                        </div>
                    
                    </div>
                    <div class="card-body">
                        <table id="example" class="table table-bordered table-responsive nowrap table-striped align-middle" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Assigned Games</th>
                                  
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {

                                    <tr id="moderator_@user.Id">
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>
                                             
                                            @if (user.Games.Any())
                                            {
                                                    @string.Join(" - ", user.Games.Select(x=>x.Name));

                                            }else{
                                                <p> No Assigned Games</p>
                                            }
                                             
                                            </td>
                                            
                                            <td>
                                                <span>
                                                <a onclick="OpenPopupContent('@Url.Action("AssignToGamePartial", "Moderators", new{id = user.Id })','Assign Games')" class="btn btn-sm btn-soft-primary me-2">Assign To Games</a></span>
                                                 <span> <button onclick="OpenPopupContent('@Url.Action("ChangePasswordPartial", "Moderators", new{userId = user.Id})','Change Moderator Password')" type="button" class="btn btn-sm btn-soft-info">Change Password</button></span>
                                                <a onclick="DeleteConfirmation('@Url.Action("Delete", "Moderators", new{ id=user.Id})',false,
                                                                                    'GET',
                                                                                    'moderator_@user.Id',
                                                                                    'Delete Moderator !'
                                                                                    ,'Are you sure you want to delete the moderator?')" class="btn btn-sm btn-soft-danger me-2">Delete</a>

                                            </td>
                                        </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- container-fluid -->
</div>

@section Scripts
    {
    <script src="~/vezlon/assets/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/vezlon/assets/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/vezlon/assets/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#example").DataTable();
        });
    </script>
}
