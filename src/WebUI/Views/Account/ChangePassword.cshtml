@model CleanArchitecture.Application.ViewModels.ChangePasswordVm
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card mt-4">

            <div class="card-body p-4">
                <div class="text-center mt-2">
                    <h5 class="text-primary">Change Password</h5>
                </div>
                <div class="p-2 mt-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"]
                        </div>
                    }
                    <form asp-controller="Account" asp-action="ChangePassword" asp-route-returnUrl="@Context.Request.Query["returnUrl"]">

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">Current Password </label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Enter Your Current Password">
                        </div>
                    

                       
                        <div class="mb-3">

                        <label class="form-label" asp-for="NewPassword">New Password</label>
                            <div class="position-relative auth-pass-inputgroup mb-3">
                        <input asp-for="NewPassword" class="form-control pe-5 password-input" placeholder="Enter new password" >
                            </div>
                        </div>

                        <div class="mb-3">

                            <label class="form-label" asp-for="ConfirmPassword">Password</label>
                            <div class="position-relative auth-pass-inputgroup mb-3">
                                <input asp-for="ConfirmPassword" class="form-control pe-5 password-input" placeholder="Enter password">
                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                            </div>
                        </div>
                        <div class="mt-4">

                            <div class="row">
                                <div class="col-md-6">
                            <button class="btn btn-success" type="submit">Change Password</button>

                                </div>
                                <div class="col-md-6">

                                   <a onclick="location.href='@Url.Action("Login" ,"Account")'" class="btn btn-danger">Back to your account</a>

                                </div>
                            </div>
                        </div>

                        <!-- end card body -->
                        <div class="text-danger mt-3" asp-validation-summary="All">
                        </div>
                    </form>
                </div>
            </div>
       
        </div>

        <!-- end card -->


    </div>
</div>


